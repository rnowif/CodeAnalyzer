<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <PreserveCompilationContext>true</PreserveCompilationContext>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="nunit" Version="3.12.0" />
        <PackageReference Include="NUnit3TestAdapter" Version="3.15.1" />
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.4.0" />
        <PackageReference Include="FluentAssertions" Version="5.10.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\CodeAnalyzer\CodeAnalyzer.csproj" />
    </ItemGroup>
    
    <ItemGroup>
        <EmbeddedResource Include="Metrics\TestClasses\EmptyClass.cs" CopyToOutputDirectory="Always" />
        <EmbeddedResource Include="Metrics\TestClasses\ClassWithOnlySystemDependencies.cs" CopyToOutputDirectory="Always" />
        <EmbeddedResource Include="Metrics\TestClasses\AClassWithAnInternalDependency.cs" CopyToOutputDirectory="Always" />
        <EmbeddedResource Include="Metrics\TestClasses\AClassWithAnInternalGenericDependency.cs" CopyToOutputDirectory="Always" />
        <EmbeddedResource Include="Metrics\TestClasses\AClassWithSeveralInternalDependencies.cs" CopyToOutputDirectory="Always" />
    </ItemGroup>

</Project>
